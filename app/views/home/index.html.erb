<h1>Home#index</h1>
<h1>Enter an item below</h1>

<br><br>

<h2>Taxonomies</h2>
<div class="row">
    <ol>
    <% @taxonomies.each do |taxonomy| %>
        <a href='<%= article_path(article) %>'>
            <li>
                <%= taxonomy.title %>
                <%= link_to 'hi', taxonomy, method: :delete, data: {confirm: 'Are you sure you want to delete ' + taxonomy.title + '?'}, class: 'btn btn-primary' %>
            </li>
        </a>
    <% end %>
    </ol>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Taxonomy Title</h2>
        <hr>

        <% flash.each do |type, msg| %>
            <%= content_tag :div, msg, class: 'alert alert-' + type %>
        <% end %>

        <ol>
        <% @nodes.each do |node| %>
            <h3>
                <li>
                    <%= node.title %>
                    <%= link_to 'hi', node, method: :delete, data: {confirm: 'Are you sure you want to delete ' + node.title + '?'}, class: 'btn btn-primary' %>
                </li>
            </h3>
        <% end %>
        </ol>
    </div>

    <div class="col-md-6">
        <h3>Enter Node Information</h3>
        <%= form_with scope: :node, url: nodes_path do |f| %>
            <%= f.text_field :title, placeholder: "Type node title" %>
            <br><br>
            <%= f.submit "Submit", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>